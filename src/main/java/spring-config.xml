<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd">

    <context:component-scan base-package="com.famousBooking"/>

    <bean id="theatre" class="com.famousBooking.model.Theatre">
        <constructor-arg index="0" ref="bookingRepository"/>
        <constructor-arg index="1" ref="bookingStatsRepository"/>
    </bean>
    <bean id="bookingRepository" class="java.util.HashSet"/>
    <bean id="bookingStatsRepository" class="java.util.HashMap"/>
</beans>